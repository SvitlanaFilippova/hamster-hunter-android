<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_16dp"
    android:background="?attr/ColorWhiteOrBlack"
    tools:context=".team.presentation.ui.fragment.TeamFragment">

    <TextView
        android:id="@+id/team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_team"
        android:textSize="22sp"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight = "500"
        android:textColor="?attr/ColorBlackOrWhite"/>

    <TextView
        android:id="@+id/section_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team"
        android:layout_marginTop="@dimen/_16dp"
        android:text="@string/worked_on_project"
        android:textSize="32sp"
        android:fontFamily="@font/ys_display_bold"
        android:textFontWeight = "700"
        android:textColor="?attr/ColorBlackOrWhite"/>

    <TextView
        android:id="@+id/dev1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_name"
        android:layout_marginTop="24dp"
        android:text="@string/dev1"
        style="@style/ProjectTeam"/>

    <TextView
        android:id="@+id/dev2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev1"
        android:text="@string/dev2"
        style="@style/ProjectTeam"/>

    <TextView
        android:id="@+id/dev3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev2"
        android:text="@string/dev3"
        style="@style/ProjectTeam"/>

    <TextView
        android:id="@+id/dev4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev3"
        android:text="@string/dev4"
        style="@style/ProjectTeam"/>

    <TextView
        android:id="@+id/dev5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev4"
        android:text="@string/dev5"
        style="@style/ProjectTeam"/>

    <TextView
        android:id="@+id/dev6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dev5"
        android:text="@string/dev6"
        style="@style/ProjectTeam"/>

</androidx.constraintlayout.widget.ConstraintLayout>
